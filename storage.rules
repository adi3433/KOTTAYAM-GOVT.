rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow anyone to read certificate files
    match /certificates/{fileName} {
      allow read: if true;
      allow write: if false;
    }
    
    // Allow authenticated users to write to their own certificates (for Cloud Functions)
    match /certificates/{fileName} {
      allow write: if request.auth != null;
    }
  }
}
